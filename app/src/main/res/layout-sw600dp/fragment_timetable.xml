<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:id="@+id/timetable_rootview">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18+"
        android:id="@+id/diciottoetichetta"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingLeft="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diciottopiu"
        android:text="@string/link"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/diciottoetichetta"
        android:layout_alignBottom="@+id/diciottoetichetta"
        android:paddingRight="2dp"
        android:layout_alignTop="@+id/diciottoetichetta"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titolo"
        android:id="@+id/textViewTitolo"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/diciottopiu" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subtitle"
        android:id="@+id/textViewSubtitle"
        android:layout_below="@+id/textViewTitolo"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageViewFirstBG"
        android:src="@drawable/poker_day"
        android:layout_below="@+id/textViewTitolo"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="New Text"
        android:id="@+id/textViewBoat"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_alignTop="@+id/imageViewFirstBG"
        android:gravity="center_vertical"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="New Text"
        android:id="@+id/textViewsecond"
        android:layout_below="@+id/textViewBoat"
        android:background="@drawable/poker_cell_bg_black"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="New Text"
        android:id="@+id/textViewTre"
        android:layout_below="@+id/textViewsecond"
        android:background="@drawable/poker_cell_bg_black"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingLeft="5dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageViewSecondBG"
        android:src="@drawable/poker_day"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/textViewQuattro" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="New Text"
        android:id="@+id/textViewQuattro"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_above="@+id/textViewcinque"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="New Text"
        android:id="@+id/textViewcinque"
        android:background="@drawable/poker_cell_bg_black"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:layout_alignParentBottom="false"
        android:layout_above="@+id/textViewSei"
        android:textSize="16sp"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="New Text"
        android:id="@+id/textViewSei"
        android:background="@drawable/poker_cell_bg_black"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:paddingLeft="5dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/imageView8"
        android:scaleType="fitXY"
        android:src="@drawable/poker_day"
        android:layout_below="@+id/textViewSubtitle" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/imageView8"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/textView33"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/textView34"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView8"
        android:id="@+id/linearLayout">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewTimetables" />
    </LinearLayout>


</RelativeLayout>