<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.casinovenezia.casinodivenezia.FreeEntrance"
    android:id="@+id/barcode_container">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/barcode"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <it.casinovenezia.casinodivenezia.VerticalTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/barcode_text"

        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/barcode"
        android:layout_alignStart="@+id/barcode"
        android:layout_marginLeft="-30dp" />

    <it.casinovenezia.casinodivenezia.VerticalTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_entrance_text"
        android:id="@+id/freeentrancetext"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center" />
</RelativeLayout>
